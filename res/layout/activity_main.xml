<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"  
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
	<LinearLayout
	    android:id="@+id/parents"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context=".CropActivity" >
	
	    <TextView
	        android:id="@+id/test"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="10dp"
	        android:layout_marginTop="10dp"
	        android:text="@string/hello_world" />
	
	    <Button
	        android:id="@+id/next"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="单击和长按跳转到没有上下导航页面" />
	
	    <Button
	        android:id="@+id/next2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="测试单击跳转到下一页" />
	
	    <Button
	        android:id="@+id/next3"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="测试单击跳转到fragment" />
	
	    <Button
	        android:id="@+id/next4"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="测试单击跳转到正常的activity 没有框架代码" />
	    
		<TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="10dp"
	        android:layout_marginTop="10dp"
	        android:text="aaaaaaaaaaaaaaaaaaaaaa\naaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa\naaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa\naaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa\naaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa\naaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa\naaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa\naaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa\naaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa\naaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa\naaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa\naaaaaaaaaaaaa" />
	</LinearLayout>	
</ScrollView>